<body>
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('hash') }}">Hash</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                {% set active = app.request.attributes.get('_route') %}
                <li{% if active == 'hash' %} class="active"{% endif %}>
                    <a href="{{ path('hash') }}">Hash</a>
                </li>
                <li{% if active == 'password' %} class="active"{% endif %}>
                    <a href="{{ path('password') }}">Password</a>
                </li>
                <li{% if active == 'random' %} class="active"{% endif %}>
                    <a href="{{ path('random') }}">Random</a>
                </li>
                {#<li{% if active == 'uuid' %} class="active"{% endif %}>#}
                    {#<a href="{{ path('uuid') }}">Uuid</a>#}
                {#</li>#}
                <li{% if active == 'json' %} class="active"{% endif %}>
                    <a href="{{ path('json') }}">Json</a>
                </li>
                <li{% if active == 'base64' %} class="active"{% endif %}>
                    <a href="{{ path('base64') }}">Base64</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li{% if active == 'about' %} class="active"{% endif %}>
                    <a href="{{ path('about') }}">About</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="container" style="padding-top: 10px;">
    {% block content %}
    {% endblock %}
</div>

