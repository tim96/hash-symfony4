{% extends 'base.html.twig' %}

{% if form is defined %}
    {% form_theme form 'form/fields.twig' %}
{% endif %}

{% block title %}
    HashCode - Generate password
{% endblock %}

{% block content %}

    {# todo: rewrite form design #}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'action': path('password'), 'method': 'POST'}) }}

            {{ form_widget(form) }}

            <button type="submit" name="submit" class="btn btn-default">Generate Passwords</button>
            {{ form_end(form) }}
        </div>
    </div>

    {% if results is not empty %}
        <div class="hash-result-body">
            <table class="table table-striped">
                <thead><h2>Password generator result</h2></thead>
                <tbody>
                {% for item in results %}
                    <tr>
                        <td><h4>{{ item }}</h4></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}